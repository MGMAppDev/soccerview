{
  "permissions": {
    "allow": [
      "Bash(*)",
      "WebFetch(*)",
      "WebSearch(*)",
      "Read(*)",
      "Edit(**/*.md)",
      "Write(**/*.md)",
      "Edit(**/*.cjs)",
      "Write(**/*.cjs)",
      "Edit(**/*.js)",
      "Write(**/*.js)",
      "Edit(**/*.json)",
      "Edit(**/*.yml)",
      "Edit(**/*.txt)",
      "Write(**/*.txt)",
      "Edit(**/*.sh)",
      "Write(**/*.sh)",
      "Write(**/*.sql)"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup|resume",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/session-start.sh\""
          }
        ]
      },
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/post-compact.sh\""
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/pre-edit.sh\""
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "auto|manual",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/pre-compact.sh\"",
            "async": true
          }
        ]
      }
    ]
  }
}
